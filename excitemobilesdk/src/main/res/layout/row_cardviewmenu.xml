<?xml version="1.0" encoding="utf-8"?>
<!-- START*** Root Container *** -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- TextVCardViewMenuoyee Name -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_employee_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/btn_listAllMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua"
                android:background="@null"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <!-- TextVCardViewMenuoyee Email -->
        <TextView
            android:id="@+id/txt_employee_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_horizontalScrollView"
            android:scrollbars="none"
            android:layout_margin="1dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- TextVCardViewMenuoyee Phone -->
                <com.example.excitemobilesdk.Utils.StaticGridView
                    android:id="@+id/GridViewMenu"
                    android:layout_width="wrap_content"
                    android:numColumns="3"
                    android:layout_height="wrap_content"
                    android:columnWidth="100dp"
                    android:paddingVertical="5dp"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="10dp"/>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</android.support.v7.widget.CardView>
    <!-- END*** Root Container *** -->